<%- include("./partials/header.ejs", {title: "articles"}) %>
<h1><%= article.title %></h1>
<h2><%= article.author %></h2>
<p>Date de publication<%= article.publishedAt %></p>
<h2><%= article.description %></h2>
<img src="<%= `${article.urlToImage}` %>" alt="gallery image" />
<p><%= article.content %></p>

<div>
    <button type="button">Modifier</button>
</div>
<form method="POST" action="/articles/<%= article.slug %>?_method=DELETE">
    <button type="submit">Supprimer</button>
</form>
  

<script src="/js/updateArticle.js"></script>
<%- include("./partials/footer.ejs") %>